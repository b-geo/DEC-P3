extends layout

block head
  title F1 Live Tracking
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  link(rel="stylesheet", href="/stylesheets/dashboard.css")

block content
  h1 Melbourne F1 Track Live
  #connectionStatus.connection-status.disconnected Disconnected
  
  .container#canvasContainer
    canvas#trackCanvas
    #loading.loading Loading track data...
  
  #legend.legend
    // Car legends will be dynamically added here
  
  .leaderboard
    h2 Live Leaderboard
    table.leaderboard-table
      thead
        tr
          th Pos
          th Driver
          th Lap
          th Speed
          th Last Update
      tbody#leaderboardBody
        // Leaderboard data will be dynamically added here

block scripts
  script(src="/socket.io/socket.io.js")
  script(src="/javascripts/track-renderer.js")